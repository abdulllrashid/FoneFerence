<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Editevent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="7dp"
        android:gravity="center"
        android:orientation="vertical">


        <EditText
            android:id="@+id/editeventName"
            android:layout_width="342dp"
            android:layout_height="91dp"
            android:hint="Event Name"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="24dp" />


        <EditText
            android:id="@+id/editdescription"
            android:layout_width="342dp"
            android:layout_height="81dp"
            android:ems="10"
            android:hint="Description"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="24dp" />

        <LinearLayout
            android:layout_width="342dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/editset_time"
                android:layout_width="195dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:hint="Time"
                android:textColor="#000000"
                android:textSize="24dp" />

            <ImageButton
                android:id="@+id/btnTime"
                android:onClick="selectTime"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/time" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="342dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/editset_date"
                android:layout_width="195dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:hint="Date"
                android:textColor="#000000"
                android:textSize="24dp" />

            <ImageButton
                android:id="@+id/btnDate"
                android:onClick="selectDate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/date" />

        </LinearLayout>

        <EditText
            android:id="@+id/editvenue"
            android:layout_width="342dp"
            android:layout_height="wrap_content"
            android:hint="Venue"
            android:textAlignment="center"
            android:textSize="24dp" />

        <EditText

            android:layout_width="342dp"
            android:layout_height="wrap_content"
            android:hint="Speaker Name"
            android:textAlignment="center"
            android:textSize="24dp"
            android:id="@+id/speakerDetails"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="30dp">

            <Button
                android:id="@+id/btndltEvent"
                android:layout_width="104dp"
                android:layout_height="37dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="30dp"
                android:background="@android:color/background_dark"
                android:onClick="onDeleteData"
                android:text="delete"
                android:textColor="#ffff"
                android:textSize="20dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="30dp" />

            <Button
                android:id="@+id/btnsaveEvent"
                android:layout_width="116dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="30dp"
                android:background="@android:color/background_dark"
                android:onClick="onSaveData"
                android:text="Save"
                android:textColor="#ffff"
                android:textSize="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp" />

        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>
